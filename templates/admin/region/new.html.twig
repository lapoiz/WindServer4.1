{% extends 'admin/base_admin.html.twig' %}

{% block title 'Gérer les régions' %}

{% block body %}
    <div class="container mt-4">

        <div class="row">
            <div class="col-6">
                <h1>Nouvelle région</h1>
                {{  include('admin/region/_form.html.twig', {form: form, button: 'Créer'}) }}
            </div>
            <div class="col-6">
                <h1>Régions existantes</h1>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Num Display</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for region in regions %}
                        <tr>
                            <td>{{ region.codeRegion }}</td>
                            <td>{{ region.nom }}</td>
                            <td>{{ region.numDisplay }}</td>
                            <td>{{ region.description|raw }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}