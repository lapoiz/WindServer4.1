{% extends 'base.html.twig' %}

{% block title 'Les spots' %}

{% block body %}
    <h1>Welcome</h1>

    <div class="container">
        <h2>La liste</h2>
        <div class="rox flex">
            {% for spot in spots %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('spot.show', {id: spot.id, slug: spot.slug}) }}">{{ spot.name }}</a>
                            </h5>
                            <p class="card-text">
                                {{ spot.description }}
                            </p>
                        </div>
                    </div>
                </div>


            {%  endfor %}
        </div>
    </div>
{% endblock %}